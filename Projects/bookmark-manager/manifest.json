{
  "manifest_version": 3,
  "name": "Advanced Bookmark Manager",
  "version": "1.0.0",
  "description": "Powerful bookmark management with bulk operations and organization features",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bookmark Manager"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}